<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">

  	<Dialog title="Attributes of Bike Engine" contentWidth="600px">
		<Panel expandable="true" expanded="true" headerText="Basic Data">
			<content>
				<f:SimpleForm
					editable="true"
					columnsL="1"
					columnsM="1">
					<f:content>
						<Label text="Item"/>
						<Input></Input>
						<Label text="Sort String"/>
						<Input></Input>
						<Label text="Sub-items"/>
						<CheckBox/>
						<Label text="Assembly"/>
						<CheckBox/>
						<Label text="Component"/>
						<Input></Input>
						<Label text="Size 1"/>
						<Input></Input>
						<Label text="Unit of Measure"/>
						<Input></Input>
						<Label text="Operation Scrap (%)"/>
						<Input></Input>
					</f:content>
				</f:SimpleForm>
			</content>
		</Panel>
		<Panel expandable="true" expanded="false" headerText="Material Data">
			<content>
				<f:SimpleForm
					columnsL="1"
					columnsM="1"
					labelSpanM="3"
					labelSpanL="3"
					emptySpanM="4"
					emptySpanL="4">
					<f:content>
						<Label text="Item"/>
						<Input></Input>
						<Label text="Sort String"/>
						<Input></Input>
						<Label text="Sub-items"/>
						<CheckBox/>
						<Label text="Assembly"/>
						<CheckBox/>
						<Label text="Component"/>
						<Input></Input>
						<Label text="Size 1"/>
						<Input></Input>
						<Label text="Unit of Measure"/>
						<Input></Input>
						<Label text="Operation Scrap (%)"/>
						<Input></Input>
					</f:content>
				</f:SimpleForm>
			</content>
		</Panel>
    	<beginButton>
      		<Button text="Save" press="onCloseAttrributesUpdateDialog"/>
    	</beginButton>
    	<endButton>
      		<Button text="Cancel" press="onCloseAttrributesUpdateDialog"/>
    	</endButton>
  	</Dialog>
</core:FragmentDefinition>